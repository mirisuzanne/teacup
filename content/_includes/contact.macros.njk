{% macro form(
  next='/contact/thanks/',
  submit='send'
) %}
<form
  name="contact"
  method="POST"
  action="{{ next }}"
  netlify-honeypot="subject"
  data-netlify="true">
  <label data-field="name">
    <span data-label>Name:</span>
    <input
      data-input="text"
      type="text"
      name="name"
      required />
  </label>
  <label data-field="email">
    <span data-label>Email:</span>
    <input
      data-input="text"
      type="email"
      name="email"
      required />
  </label>
  <label data-field="message">
    <span data-label>Message:</span>
    <textarea
      data-input="text area"
      name="message"
      required></textarea>
  </label>
  <label hidden>
    <span>Don't fill out this field:</span>
    <input name="subject" />
  </label>
  <div data-actions>
    <button
      data-btn="submit"
      type="submit">
      {{ submit }}
    </button>
  </div>
</form>
{% endmacro %}

{% macro signup(
  title='Subscribe for updates',
  submit='subscribe',
  note=none
) %}
<form action="https://teacupgorilla.us1.list-manage.com/subscribe/post?u=c4ede61aa238c4cacbcacc51c&amp;id=d831d43185&amp;f_id=006edfe5f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_self">
  <h2>{{ title }}</h2>
  {% if note %}
    {{ note | md | safe }}
  {% endif %}
	<label for="mce-EMAIL"  data-field="mce-email">
    <span data-label>Email Address:</span>
	  <input data-input="text" type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" required>
  </label>
  <div data-actions>
    <button
      data-btn="submit"
      type="submit">
      {{ submit }}
    </button>
  </div>
</form>
{% endmacro %}
