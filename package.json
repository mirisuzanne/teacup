{
  "name": "teacup",
  "title": "Teacup Gorilla",
  "version": "1.0.0",
  "description": "Cinematic indie-rock with evocative poetry",
  "homepage": "https://www.teacupgorilla.com",
  "license": "UNLICENSED",
  "private": true,
  "main": "_site/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirisuzanne/mia.git"
  },
  "engines": {
    "node": "18"
  },
  "type": "module",
  "scripts": {
    "js": "rollup -c",
    "sass": "sass src/scss/screen.scss _built/css/screen.css",
    "prettier:js": "prettier --write \"**/*.js\"",
    "prettier:other": "prettier --write \"**/*.{json,yml}\"",
    "eslint": "eslint \"*.js\" \"**/*.js\" --fix",
    "lint": "run-p lint:* prettier:other",
    "lint:js": "run-s prettier:js eslint",
    "eleventy": "eleventy --config=.eleventy.cjs",
    "eleventy:serve": "eleventy --config=.eleventy.cjs --serve",
    "watch:sass:compile": "chokidar \"src/scss/**/*.scss\" -c \"npm run run-p sass\"",
    "watch:sass": "run-p watch:sass:*",
    "watch:js:compile": "rollup -c --watch",
    "watch:js:lint": "chokidar \"**/.eslintrc.yml\" -c \"npm run lint:js\"",
    "watch:js": "run-p watch:js:*",
    "assets:clean": "rm -rf ./_built/",
    "serve": "npm-run-all build:assets -p eleventy:serve watch:js watch:sass",
    "build:assets": "npm-run-all js sass",
    "build": "npm-run-all build:assets eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0-alpha.16",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "accoutrement": "^4.0.4",
    "cascading-color-systems": "^0.1.0-beta.16",
    "chokidar-cli": "^3.0.0",
    "core-js": "^3.27.2",
    "cssremedy": "^0.1.0-beta.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "markdown-it": "^13.0.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-mark": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rollup": "^3.10.1",
    "sass": "^1.57.1",
    "typogr": "^0.6.8"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "*.{json,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
